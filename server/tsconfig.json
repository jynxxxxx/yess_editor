{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Environment Settings === */
    "module": "NodeNext",             // modern Node ESM behavior
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    /* === Output === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Strictness === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Module Behavior === */
    "esModuleInterop": true,          // allows import express from "express"
    "verbatimModuleSyntax": true,     // preserves import/export style
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src"],                 // âœ… Add this so TS knows what to compile
  "exclude": ["node_modules", "dist"]
}